#!ipxe
menu Selection
item kali KaliLinux
item debian Debian Live
item ubuntu Ubuntu
item sanboot SanBoot
choose os && goto ${os}

:kali
kernel http://${next-server}/kali/vmlinuz
initrd http://${next-server}/kali/initrd.img
imgargs vmlinuz boot=live config hooks=filesystem username=live noeject fetch=http://${next-server}/kali/filesystem.squashfs
boot

:debian
kernel http://${next-server}/debian/vmlinuz1
initrd http://${next-server}/debian/initrd1.img
imgargs vmlinuz1 initrd=initrd1.img boot=live config hooks=filesystem username=live noeject fetch=http://${next-server}/debian/filesystem.squashfs
boot

:ubuntu
kernel http://${next-server}/ubuntu/casper/vmlinuz
initrd http://${next-server}/ubuntu/casper/initrd
imgargs vmlinuz initrd=initrd root=/dev/nfs boot=casper netboot=nfs nfsroot=${next-server}:/ubuntu ip=dhcp splash quiet -- || read void
boot

:sanboot
sanboot http://www.privacy-cd.org/download/Discreete_Linux_2016.1_beta1.hybrid.iso
boot
